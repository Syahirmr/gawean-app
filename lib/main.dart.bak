import 'package:flutter/material.dart';
import 'theme/app_theme.dart';
import 'theme/theme_controller.dart';
import 'navigation/main_navbar.dart';
import 'pages/calendar_page.dart'; // âœ… TAMBAH INI

void main() {
  // ðŸ”¹ pastiin auto theme ke-apply pas app start
  ThemeController.refreshAutoThemeIfNeeded();
  runApp(const Gawean());
}

class Gawean extends StatelessWidget {
  const Gawean({super.key});

  @override
  Widget build(BuildContext context) {
    return ValueListenableBuilder<ThemeMode>(
      valueListenable: ThemeController.themeMode,
      builder: (context, mode, _) {
        return MaterialApp(
          debugShowCheckedModeBanner: false,
          title: 'TaskifyQuest',

          // ðŸ”¹ theme source
          theme: AppTheme.lightTheme(),
          darkTheme: AppTheme.darkTheme(),
          themeMode: mode,

          home: const MainNavbar(),

          // âœ… ROUTES DARI CODE LAMA
          routes: {
            '/calendar': (context) => const CalendarPage(),
          },
        );
      },
    );
  }
}
